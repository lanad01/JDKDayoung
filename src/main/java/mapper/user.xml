<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
<insert id="putUser" parameterType="model.User">
	insert into user_info values(#{name},#{nick},#{birth_date},#{gender},#{id},
	#{password},#{pwdCheck},#{quiz},#{answer},#{email},#{area},#{picture_url})
</insert>
<select id="getUser" parameterType="model.User" resultType="model.User">
	select * from user_info where id=#{id} and password=#{password}
</select>
<select id="getItem" parameterType="Integer" resultType="model.Item">
		select * from my_fruits where item_id=#{id}
	</select>
	<select id="getItemList" resultType="model.Item">
		select * from my_fruits
	</select>

</mapper>